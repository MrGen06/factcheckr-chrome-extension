{
  "name": "FactCheckr",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "contextMenus",
    "notifications",
    "scripting",
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png"
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}
